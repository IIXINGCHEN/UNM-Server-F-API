{
  "name": "unm-server",
  "version": "2.0.0",
  "description": "网易云解灰-API服务 (现代化版本)",
  "main": "dist/server.js",
  "scripts": {
    "clean": "node script/clean.js",
    "prebuild": "node script/backup-restore.js backup && node script/clean.js",
    "build": "tsc --project tsconfig.json",
    "postbuild": "node script/backup-restore.js restore",
    "start": "node script/start.js",
    "start:direct": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "prd": "pm2 start ecosystem.config.js",
    "test": "cross-env ENABLE_API_AUTH=true API_KEYS='test-api-key' jest",
    "cleanup-backups": "node script/backup-restore.js cleanup",
    "security-audit": "pnpm audit",
    "security-fix": "pnpm audit fix",
    "security-check": "node script/security-checker.js",
    "generate-api-key": "node script/generate-api-key.js",
    "vercel-build": "pnpm run build",
    "vercel-dev": "cross-env VERCEL=1 tsx watch src/server.ts"
  },
  "author": "imsyy",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "8.3.0",
    "@fastify/cors": "^8.4.1",
    "@fastify/csrf-protection": "6.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/session": "10.7.0",
    "@fastify/static": "^6.11.2",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@types/pg": "^8.11.14",
    "@unblockneteasemusic/server": "^0.27.8",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fastify": "^4.29.0",
    "ioredis": "^5.6.1",
    "lru-cache": "7.18.3",
    "pg": "^8.15.6",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "redis": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.5",
    "shx": "^0.4.0",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.5.4"
  }
}